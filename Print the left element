class Solution{
    public:
    int leftElement(int a[], int n) {
        // Your code goes here 
        // int ans;
        // for(int i=0;i<n;i++){
        // std::sort(a, a+n);
        // while(a.empty()==true){
            // a.pop
        // }
        sort(a, a+n);
        if(n%2==0){
            return a[n/2-1];
        }
        else{
            return a[n/2];
        }
    }
};
